{
  "name": "show-pic-management",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --mode staging",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "cz": "yarn log && git add . && git cz",
    "log": "conventional-changelog --config ./node_modules/vue-cli-plugin-commitlint/lib/log -i CHANGELOG.md -s -r 0",
    "serve-release": "vue-cli-service serve --mode release",
    "slint": "stylelint 'src/**/*.less' 'src/**/*.vue' --config '.stylelintrc' --fix"
  },
  "dependencies": {
    "@toast-ui/vue-editor": "^2.2.0",
    "clipboard": "^2.0.6",
    "core-js": "^3.6.4",
    "element-ui": "2.11.0",
    "exif-js": "^2.3.0",
    "js-base64": "^2.5.2",
    "lodash": "^4.17.15",
    "mainto-fed-utils": "^1.0.1-release.0",
    "moment": "^2.25.3",
    "nprogress": "^0.2.0",
    "path-to-regexp": "^6.1.0",
    "qiniu-js": "^3.0.3",
    "qrcode": "^1.4.4",
    "uuid": "^8.1.0",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "vuedraggable": "^2.24.0",
    "vuex": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-plugin-router": "~4.3.0",
    "@vue/cli-plugin-vuex": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "add": "^2.0.6",
    "axios": "^0.18.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "commitlint": "^8.3.5",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^6.7.2",
    "eslint-plugin-attributes": "^1.1.8",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.2.4",
    "right-pad": "^1.0.1",
    "style-resources-loader": "^1.3.2",
    "stylelint": "^13.3.3",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "vue-cli-plugin-axios": "~0.0.4",
    "vue-cli-plugin-commitlint": "^1.0.12",
    "vue-cli-plugin-element": "~1.0.1",
    "vue-cli-plugin-style-resources-loader": "~0.1.4",
    "vue-template-compiler": "^2.6.11",
    "yarn": "^1.22.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/vue-cli-plugin-commitlint/lib/cz"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{less,vue}": [
      "yarn slint",
      "git add ."
    ]
  }
}
